
group {
		name: "main/mediaplayer_view";
//		max, 800 400;


		images {
	   		image: "images/background.png" COMP;
	   		image: "images/controller-background.png" COMP;
	   		image: "images/bg_music.jpg" COMP;
		}


		parts {
			part {
            	name: "background";
            	type, IMAGE;
            	description {
               	state: "default" 0.0;
//				min, 800 480;
               	rel1 {
                  	relative: 0.0 0.0;
               		}
               	rel2 {
                  	relative: 1.0 1.0;
                  	offset: -1 -1;
               		}
               	image {
                  	normal: "images/background.png";
                  	border: 13 13 13 13;
               		}
            	}
			}

//-------------------------------show information------------------
			part {
				name: "main/mediaplayer_view/cover_view";
				type, GROUP;
				source: "widget/cover";
				mouse_events, 0;
				description {
					state, "default" 0.0;
					rel1.relative, 0.03 0.03;
					rel2.relative, 0.25 0.42;
				}			
			}
			
//------------------playlist
			part {
				name, "playlist_ctl.area";
				type, RECT;
				description {
					state, "default" 0.0;

					rel1.to, "background";
					rel1.relative, 0.28 0.03;
					
					rel2.to, "background";
					rel2.relative, 0.6 0.12;
					
					color: 0 0 0 0;
				}  
			}
			
			part {
				name, "playlist_ctl.swallow";
				type, SWALLOW;
				mouse_events: 1;
				description {
					state, "default" 0.0;

            		rel1.to: "playlist_ctl.area";
            		rel1.offset: 2 2;

            		rel2.to: "playlist_ctl.area";
            		rel2.offset: -2 -2;
				}
			}


//-------------------------info-----------------

			part {
				name, "songs_ifo.area";
				type, RECT;
				description {
					state, "default" 0.0;
					max, 250 100;
					
					rel1.relative, 0.28 0.13;
					rel2.relative, 0.6 0.42;
					
					color: 0 0 0 0;
				}  
			}
			
			part {
				name, "songs_ifo.swallow";
				type, SWALLOW;
				mouse_events: 1;
				description {
					state, "default" 0.0;

            		rel1.to: "songs_ifo.area";
            		rel1.offset: 2 2;

            		rel2.to: "songs_ifo.area";
            		rel2.offset: -2 -2;
				}
			}
			
//-------------------------------controller---------------------------
			part {
				name: "control_bkg";
				type, IMAGE;
				mouse_events, 0;
				description {
					state, "default" 0.0;
					rel1.relative, 0 0.79;
					image {
						normal,"images/controller-background.png";
					}
				}			
			}

//--------------play_pause
			part {
				name, "play_ctl.area";
				type, RECT;
				description {
					state, "default" 0.0;
					rel1.relative, 0.3 0.8;
					rel2.relative, 0.7 0.9;
					color: 0 0 0 0;
				}  
			}
			
			part {
				name, "play_ctl.swallow";
				type, SWALLOW;
				mouse_events: 1;
				description {
					state, "default" 0.0;

            		rel1.to: "play_ctl.area";
            		rel1.offset: 2 2;

            		rel2.to: "play_ctl.area";
            		rel2.offset: -2 -2;
				}
			}
//------------------------------------

			part {
				name, "slider.area";
				type, RECT;
				description {
					state, "default" 0.0;
					max, 99999 30;
					rel1.relative, 0.01 0.92;
					rel2.relative, 0.99 0.98;
					color: 0 0 0 0;
				}  
			}
			
			part {
				name, "slider.swallow";
				type, SWALLOW;
				mouse_events: 1;
				description {
					state, "default" 0.0;

            		rel1.to: "slider.area";
            		rel1.offset: 1 1;

            		rel2.to: "slider.area";
            		rel2.offset: -1 -1;
				}
			}

///////////////-----------------time lables--------
			part {
				name, "text.duration.label";
				type, TEXT;
				effect: FAR_SHADOW;
				mouse_events, 0;
				description {
					state, "default" 0.0;
					color: 255 255 255 255;
					rel1.relative, 0.92 0.86;
					rel2.relative, 0.99 0.90;
					text {
      				text_class: "grid_font";
      				font: "Sans";
      				size: 12;
      				min: 0 1;
      				text: "label";
      				align: 0.5 0.5;
     				}
				}			
			}

			part {
				name, "text.playtime.label";
				type, TEXT;
				effect: FAR_SHADOW;
				mouse_events, 0;
				description {
					state, "default" 0.0;
					color: 255 255 255 255;
					rel1.relative, 0.01 0.86;
					rel2.relative, 0.08 0.90;
					text {
      				text_class: "grid_font";
      				font: "Sans";
      				size: 12;
      				min: 0 1;
      				text: "label";
      				align: 0.5 0.5;
     				}
				}			
			}
///////////////////////////////////////////////
	
		}
	
}


